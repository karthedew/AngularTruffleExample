{
    "name": "scaffold-truffle",
    "version": "0.0.0",
    "scripts": {
        "chain": "truffle develop",
        "deploy:dev": "truffle migrate --network develop",
        "deploy:truffle": "truffle migrate --network kovan -f 2 --to 2",
        "fork:mainnet": "ganache-cli --fork https://mainnet.infura.io/v3/%INFURA_MAINNET_KEY%",
        "fork:kovan": "ganache-cli --fork sed -n 's/KOVAN_HTTP_URL=//p' .env",
        "fork:test": "sed -n 's/KOVAN_HTTP_URL=//p' .env"
    },
    "dependencies": {
        "@chainlink/contracts": "^0.1.6",
        "@openzeppelin/contracts": "^3.4.0",
        "@truffle/hdwallet-provider": "^1.2.2",
        "dotenv": "^8.2.0",
        "solc": "^0.7.6",
        "web3": "^1.3.4"
    }
}
